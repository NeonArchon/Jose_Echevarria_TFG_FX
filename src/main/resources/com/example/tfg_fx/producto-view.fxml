<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tfg_fx.controller.PantallaProductoController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #2c2c2c;">

    <!-- CONTENIDO CENTRAL -->
    <center>
        <HBox spacing="40" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40"/>
            </padding>

            <!-- COLUMNA IZQUIERDA: IMAGEN + DESCRIPCIÓN -->
            <VBox spacing="20" alignment="TOP_CENTER" prefWidth="450">

                <!-- TÍTULO -->
                <VBox spacing="5" alignment="CENTER">
                    <Label fx:id="lblTitulo"
                           text=""
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-alignment: center;"/>

                    <Label fx:id="lblSubtitulo"
                           text=""
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffdf00; -fx-alignment: center;"/>

                    <!-- ETIQUETA DE OFERTA (SOLO VISIBLE SI HAY OFERTA) -->
                    <Label fx:id="lblOferta"
                           text="¡EN OFERTA!"
                           visible="false"
                           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #ff0000; -fx-background-color: #fff; -fx-padding: 5 10; -fx-background-radius: 5;"/>
                </VBox>

                <!-- IMAGEN -->
                <BorderPane>
                    <ImageView fx:id="imgProducto"
                               fitWidth="400"
                               preserveRatio="true"
                               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0, 0, 5);"/>
                </BorderPane>

                <!-- DESCRIPCIÓN -->
                <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 0 20;">
                    <Label text="Descripción:"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffdf00;"/>
                    <Label fx:id="lblDescripcion"
                           text=""
                           wrapText="true"
                           style="-fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-line-spacing: 5px;"/>
                </VBox>

            </VBox>

            <!-- SEPARADOR VERTICAL -->
            <Separator orientation="VERTICAL" style="-fx-background-color: #555;"/>

            <!-- COLUMNA DERECHA: ESPECIFICACIONES -->
            <VBox spacing="25" alignment="TOP_LEFT" prefWidth="350">

                <Label text="ESPECIFICACIONES DEL PRODUCTO"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #ffdf00; -fx-underline: true;"/>

                <VBox spacing="15" style="-fx-padding: 0 0 0 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Precio:"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
                        <Label fx:id="lblPrecio"
                               text=""
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ffdf00;"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Stock disponible:"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
                        <Label fx:id="lblStock"
                               text=""
                               style="-fx-font-size: 16px; -fx-text-fill: #00ff00;"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Tipo:"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
                        <Label fx:id="lblTipo"
                               text=""
                               style="-fx-font-size: 16px; -fx-text-fill: #ffffff;"/>
                    </HBox>

                    <!-- Dimensiones (podrías añadir este campo a tu entidad) -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Dimensiones:"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
                        <Label fx:id="lblDimensiones"
                               text=""
                               style="-fx-font-size: 16px; -fx-text-fill: #ffffff;"/>
                    </HBox>

                    <!-- Peso (podrías añadir este campo a tu entidad) -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Peso:"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
                        <Label fx:id="lblPeso"
                               text=""
                               style="-fx-font-size: 16px; -fx-text-fill: #ffffff;"/>
                    </HBox>
                </VBox>

                <!-- BOTONES -->
                <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="btnComprar"
                            text="COMPRAR"
                            prefWidth="250"
                            style="-fx-background-color: #731b5c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 15 30; -fx-background-radius: 5;"/>

                    <HBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnCarrito"
                                text="AÑADIR AL CARRITO"
                                style="-fx-background-color: #ffdf00; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>

                        <Button fx:id="btnWishlist"
                                text="WISHLIST"
                                style="-fx-background-color: #ffffff; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>

            </VBox>

        </HBox>
    </center>

</BorderPane>
