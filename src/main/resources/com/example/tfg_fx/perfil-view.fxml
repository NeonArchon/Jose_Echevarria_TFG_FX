<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tfg_fx.controller.PerfilController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: linear-gradient(to bottom, #7ee0f3cc, #7ee0f3cc);">

    <!-- Título -->
    <Label text="Perfil Personal"
           layoutX="540" layoutY="40"
           textFill="#e0283c"
           style="-fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="30"/>
        </font>
    </Label>

    <!-- Imagen de Perfil -->
    <StackPane layoutX="580" layoutY="100">
        <Circle radius="50" fill="white"/>
        <ImageView fitHeight="100" fitWidth="100">
            <image>
                <!-- <Image url="@/images/Logo_principal.png"/> -->
            </image>
        </ImageView>
    </StackPane>

    <!-- Panel de Datos Personales -->
    <StackPane layoutX="300" layoutY="250" prefWidth="650" prefHeight="400"
               style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #f15ac2; -fx-border-radius: 20; -fx-border-width: 10;">
        <VBox spacing="20" alignment="CENTER" prefWidth="600">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Nombre -->
            <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="550">
                <Label text="Nombre:" textFill="#333">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="nombreField" promptText="Nombre" prefWidth="550" prefHeight="35"/>
            </VBox>

            <!-- Apellidos -->
            <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="550">
                <Label text="Apellidos:" textFill="#333">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="apellidosField" promptText="Apellidos" prefWidth="550" prefHeight="35"/>
            </VBox>

            <!-- Nombre de usuario -->
            <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="550">
                <Label text="Nombre de usuario:" textFill="#333">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="nombreUsuarioField" promptText="Nombre de usuario" prefWidth="550" prefHeight="35"/>
            </VBox>

            <!-- Email -->
            <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="550">
                <Label text="Email:" textFill="#333">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="Email" prefWidth="550" prefHeight="35"/>
            </VBox>

            <!-- Fecha de nacimiento -->
            <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="550">
                <Label text="Fecha de nacimiento:" textFill="#333">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <DatePicker fx:id="fechaNacimientoPicker" promptText="Fecha de nacimiento" prefWidth="550" prefHeight="35"/>
            </VBox>

            <!-- Sexo -->
            <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="550">
                <Label text="Sexo:" textFill="#333">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <ComboBox fx:id="sexoComboBox" promptText="Selecciona sexo" prefWidth="550" prefHeight="35"/>
            </VBox>

            <!-- Botones -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Cambiar datos"
                        onAction="#handleCambiarDatos"
                        style="-fx-background-color: #8a8a8a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"
                        prefWidth="120" prefHeight="35"/>

                <Button fx:id="guardarButton" text="Guardar cambios"
                        onAction="#handleGuardarCambios"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"
                        prefWidth="120" prefHeight="35" visible="false"/>

                <Button fx:id="cancelarButton" text="Cancelar"
                        onAction="#handleCancelar"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"
                        prefWidth="120" prefHeight="35" visible="false"/>
            </HBox>
        </VBox>
    </StackPane>

    <!-- Botones Laterales -->
    <VBox layoutX="1000" layoutY="250" spacing="30" alignment="CENTER">
        <HBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    <!-- <Image url="@/images/shopping-cart-icon.png"/> -->
                </image>
            </ImageView>
            <Label text="Carrito">
                <font>
                    <Font name="System" size="16"/>
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    <!-- <Image url="@/images/wishlist.png"/> -->
                </image>
            </ImageView>
            <Label text="Wishlist">
                <font>
                    <Font name="System" size="16"/>
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    <!-- <Image url="@/images/sell.png"/> -->
                </image>
            </ImageView>
            <Label text="Colección">
                <font>
                    <Font name="System" size="16"/>
                </font>
            </Label>
        </HBox>
    </VBox>

</AnchorPane>
